<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
  
  <p>名前</p>
  <div class="field">
    <%= f.label :'(姓)' %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label :'(名)' %>
    <%= f.text_field :first_name, autocomplete: "first_name" %>
  </div>
  
  <p>フリガナ</p>
  <div class="field">
    <%= f.label :'(セイ)'%>
    <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
  </div>
  
  <div class="field">
    <%= f.label :'(メイ)'%>
    <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
  </div>
  
  <p>メールアドレス</p>
  <div class="field">
    <%= f.email_field :email, autocomplete: "email" %>
  </div>
  
  <p>郵便番号(ハイフンなし)</p>
  <div class="field">
    <%= f.text_field :postal_code, autocomplete: "postal_code" %>
  </div>
  
  <p>住所</p>
  <div class="field">
    <%= f.text_field :address, autocomplete: "address" %>
  </div>
  
  <p>電話番号(ハイフンなし)</p>
  <div class="field">
    <%= f.text_field :phone_number, autocomplete: "phone_number" %>
  </div>
  
  <p>パスワード(6文字以上)</p>
  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  
  <p>パスワード(確認用)</p>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<p>既に登録済みの方</p>
<%= link_to 'こちら', customer_session_path %> からログインください。
