<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="my-4">新規会員登録</h2>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
      <div class="d-flex justify-content-center align-items-center">
      <table>
        <tr>
          <td>名前</td>
          <td>(姓)</td>
          <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
          <td>(名)</td>
          <td><%= f.text_field :first_name, autocomplete: "first_name" %></td>
        </tr>
        
        <tr>
          <td>フリガナ</td>
          <td>(セイ)</td>
          <td><%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %></td>
          <td>(メイ)</td>
          <td><%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %></td>
        </tr>
        
        <tr>
          <td>メールアドレス</td>
          <td></td>
          <td> <%= f.email_field :email, autocomplete: "email" %></td>
          <td></td>
        </tr>
        
        <tr>
          <td>郵便番号（ハイフンなし）</td>
          <td></td>
          <td> <%= f.text_field :postal_code, autocomplete: "postal_code" %></td>
          <td></td>
        </tr>
        
        <tr>
          <td>住所</td>
          <td></td>
          <td><%= f.text_field :address, autocomplete: "address", size: 35 %></td>
          <td></td>
        </tr>
        
        <tr>
          <td>電話番号（ハイフンなし）</td>
          <td></td>
          <td><%= f.text_field :phone_number, autocomplete: "phone_number" %></td>
          <td></td>
        </tr>
        
        <th><br></th>
        
        <tr>
          <td>パスワード（6文字以上）</td>
          <td></td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          <td></td>
        </tr>
        
        <tr>
          <td>パスワード（確認用）</td>
          <td></td>
          <td> <%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          <td></td>
        </tr>
        
        <th><br></th>
        
        <tr>
          <td></td>
          <td></td>
          <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
          <td></td>
        </tr>
      </table>
      </div>
      <% end %>
      <div class="mb-4">既に登録済みの方</div>
      <div class="ml-5"><%= link_to 'こちら', customer_session_path, style: 'color: black;' %> からログインください。</div>
    </div>
  </div>
</div>