<div class="container">
  <div class="row">
    <div class="col-md-5 mx-left offset-2" style="background-color: #DCC2A1; margin-top: 40px;">
      <h4 class="text-center"><strong>ジャンル一覧・追加</strong></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mx-left offset-2" style="margin-top: 20px;">
      <% if flash[:success] %>
        <div class="alert alert-success" role="alert">
          <%= flash[:success] %>
        </div>
      <% end %>
      <% if flash[:error] %>
        <div class="alert alert-danger" role="alert">
          <%= flash[:error] %>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-7 mx-left offset-2" style="margin-bottom: 10px;">
      <%= form_with(model: @genre, url: admin_genres_path, local: true) do |form| %>
        <div class="row">
          <div class="col">
            <div class="form-group mb-3">
              <%= form.label :name, "ジャンル名：" %>
              <%= form.text_field :name, name: 'genre[name]', placeholder: "ジャンル名" %>
              <%= form.submit "新規登録", class: "btn btn-primary", style: "background-color: green;" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5 mx-left offset-3">
      <table class="table" style="border: 1px solid black;">
        <thead style="background-color: #DCC2A1;">
          <tr>
            <th style="border-bottom: 1px solid black;">ジャンル</th>
            <th style="border-bottom: 1px solid black;"></th> <!-- 編集するボタン用の列を追加 -->
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td class="text-right">
                <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary", style: "background-color: green;" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>