<h1>ジャンル編集</h1>

<% if flash[:success] %>
  <p><%= flash[:success] %></p>
<% end %>

<% if flash[:error] %>
  <p><%= flash[:error] %></p>
<% end %>

<%= form_with(model: @genre, url: admin_genre_path(@genre), method: :patch, local: true) do |form| %>
  <%= form.label :name, "ジャンル名" %>
  <%= form.text_field :name %>
  <%= form.submit "変更を保存" %>
<% end %>