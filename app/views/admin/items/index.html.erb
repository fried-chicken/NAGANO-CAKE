<div class="container">
  <div class="row">
    <div class="col-4" style="background-color: rgba(211, 211, 211, 0.5); margin-top: 40px;">
      <h4 class="text-center"><strong>商品一覧</strong></h4>
    </div>
  </div>
  <div class="d-flex justify-content-end" style="margin: -40px 40px 30px 0;">
    <%= link_to "＋", new_admin_item_path, class: "btn btn-primary btn-circle", style: "text-decoration: none;" %>
  </div>
  <table class="table" style="border-bottom: 1px solid rgba(211, 211, 211, 0.5);">
    <thead class="table-title" style="background-color: rgba(211, 211, 211, 0.5);">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>販売ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item), style: "color: black; text-decoration: underline;" %></td>
          <td><%= number_with_delimiter(item.price) %></td>
          <td><%= item.genre.name %></td>
          <td style="<%= item.is_active ? 'color: green;' : 'color: gray;' %>"><%= item.is_active ? '販売中' : '販売停止中' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>