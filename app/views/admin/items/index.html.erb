<div class="container">
  <div class="row">
    <div class="col">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>商品一覧</h1>
        <%= link_to "＋", new_admin_item_path, class: "btn btn-primary btn-circle", style: "text-decoration: none;" %>
      </div>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>販売ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item), style: "color: black; text-decoration: underline;" %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td style="<%= item.is_active ? 'color: green;' : 'color: gray;' %>"><%= item.is_active ? '販売中' : '販売停止中' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>