<div class="container">
  <div class="row">
    <div class="col-4 offset-4" style="background-color: rgba(211, 211, 211, 0.5); margin-top: 40px;">
      <h4 class="text-center"><strong>商品詳細</strong></h4>
    </div>
  </div>
  <div class="row" style="margin-top: 20px;">
    <div class="col-md-4 mx-auto">
      <%= image_tag @item.image, width: 250, height: 200 %>
    </div>

    <div class="col-md-8">
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-md-4">
            <h4 class="card-title">商品名</h4>
          </div>
          <div class="col-md-8">
            <p class="card-text"><%= @item.name %></p>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-4">
            <h4 class="card-title">商品説明</h4>
          </div>
          <div class="col-md-8">
            <p class="card-text"><%= @item.introduction %></p>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-4">
            <h4 class="card-title">ジャンル</h4>
          </div>
          <div class="col-md-8">
            <p class="card-text"><%= @item.genre.name %></p>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-4">
            <h4 class="card-title">税込価格(税抜価格)</h4>
          </div>
          <div class="col-md-8">
            <p class="card-text"><%= number_with_delimiter((@item.price * 1.1).round) %>円（<%= number_with_delimiter(@item.price) %>円）</p>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-4">
            <h4 class="card-title">販売ステータス</h4>
          </div>
          <div class="col-md-8">
            <% if @item.is_active %>
              <p class="text-success">販売中</p>
            <% else %>
              <p style="color: gray;">販売停止中</p>
            <% end %>
          </div>
        </div>

        <div class="row mt-3">
          <div class="col-md-2 text-center">
            <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>