<h1>商品編集</h1>
<%= form_with(model: @item, url: admin_item_path(@item), method: :patch, local: true) do |form| %>
  <div>
    <%= form.label :image, "商品画像" %>
    <%= form.file_field :image, accept: "image/*" %>
  </div>
  
  <div>
    <%= form.label :name, "商品名" %>
    <%= form.text_field :name, placeholder: "商品名" %>
  </div>

  <div>
    <%= form.label :introduction, "商品説明" %>
    <%= form.text_area :introduction, placeholder: "商品説明" %>
  </div>
  
  <div>
    <%= form.label :genre_id, "ジャンル" %>
    <%= form.collection_select :genre_id, Genre.all, :id, :name %>
  </div>
  
  <div>
    <%= form.label :price, "税抜価格" %>
    <%= form.text_field :price, placeholder: "税抜価格" %>
  </div>
  
  <div>
    <%= form.label :is_active, "販売ステータス" %>
    <%= form.select :is_active, [['販売中', true], ['販売停止中', false]] %>
  </div>
  
  <%= form.submit "更新する" %>
<% end %>