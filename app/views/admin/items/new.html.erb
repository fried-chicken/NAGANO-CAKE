<h1>商品新規登録</h1>

<%= form_with model: @item, url: admin_items_path do |f| %>
  
  <h4>商品画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  
  <h4>商品名</h4>
  <%= f.text_field :name, placeholder: "商品名" %>
  
  <h4>商品説明</h4>
  <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>
  
  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  
  <h4>税抜価格<h4>
  <%= f.text_field :price, placeholder: "1000" %>円
  
  <h4>販売ステータス</h4>
  <input type="radio" id="active" name="item[is_active]" value="true" checked>
  <label for="active">販売中</label>
  
  <input type="radio" id="inactive" name="item[is_active]" value="false">
  <label for="inactive">販売停止中</label>
  
  <%= f.submit '新規登録' %>

<% end %>