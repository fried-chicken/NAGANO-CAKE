<div class="container">
  <h4>注文情報確認</h4>
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <thead class="table-title" style="background-color: rgba(211, 211, 211, 0.5);">
          <tr>
            <th style="border: 1px solid black;">商品名</th>
            <th style="border: 1px solid black;">単価（税込）</th>
            <th style="border: 1px solid black;">数量</th>
            <th style="border: 1px solid black;">小計</th>
          </tr>
        <% @sum = 0 %>
        <% @cart_items.each do |cart_item| %>
        <tbody>
          <tr>
            <td style="border: 1px solid black;">
              <%= image_tag cart_item.item.image, size: "100x80" %>
              <%= cart_item.item.name %>
            </td>

            <td style="border: 1px solid black;"><%= number_with_delimiter((cart_item.item.with_taxin_price).floor) %></td>
            <td style="border: 1px solid black;"><%= cart_item.amount %></td>
            <td style="border: 1px solid black;"><%= number_with_delimiter(((cart_item.item.with_taxin_price).floor)*(cart_item.amount)) %></td>

            <% @sum += cart_item.subtotal %>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>

    <div class="col-4">
      <table class="table table-bordered">
        <tr>
          <th style="background-color: rgba(211, 211, 211, 0.5); border: 1px solid black;">送料</th>
          <td style="border: 1px solid black;"><%= @shipping_fee %></td>
        </tr>
        <tr>
          <th style="background-color: rgba(211, 211, 211, 0.5); border: 1px solid black;">商品合計</th>
          <td style="border: 1px solid black;"><%= number_with_delimiter(@sum.floor) %></td>
        </tr>
        <tr>
          <th style="background-color: rgba(211, 211, 211, 0.5); border: 1px solid black;">請求金額</th>
          <td style="border: 1px solid black;"><%= number_with_delimiter(@shipping_fee + (@sum.floor)) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col d-flex">
      <div>
        <p><strong>支払方法</strong></p>
        <p><strong>お届け先</strong></p>
      </div>

      <div style="margin-left:20px;">
        <p><%= @order.payment_method_i18n%></p>
        <p>
          〒<%= @order.postal_code %>
          <%= @order.address %></br>
          <%= @order.name %>
        </p>
      </div>
    </div>
  </div>

  <div class="text-center">
  <%= form_with model: @order_new , url: orders_path  do |f| %>
    <%= f.hidden_field :customer_id, value: current_customer.id %>
    <%= f.hidden_field :payment_method, value:  @order.payment_method %>
    <%= f.hidden_field :shipping_fee, value: @shipping_fee %>
    <%= f.hidden_field :postal_code, value: @order.postal_code %>
    <%= f.hidden_field :total_price, value: @shipping_fee + (@sum.floor) %>
    <%= f.hidden_field :address, value: @order.address%>
    <%= f.hidden_field :name, value: @order.name %>
    <%= f.hidden_field :status, value: "入金待ち"%>
    <%= f.submit "注文を確定する", class:"btn btn-success","data-confirm" => "注文を確定しますか？" %>
  <% end %>
  </div>
</div>