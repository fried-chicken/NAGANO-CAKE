<div class="container"  style="margin-top: 10px;">
  <h4> <strong>注文履歴詳細</strong></h4>
    <div class ="row">

      <div class="col-8">
        <h5><strong>注文情報</strong></h5>
        <table class="table table-bordered">
          <tr>
            <td style="background-color: rgba(211, 211, 211, 0.5); border: 1px solid black;">注文日</td>
            <td style="border: 1px solid black;"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td style="background-color: rgba(211, 211, 211, 0.5); border: 1px solid black;">配送先</td>
            <td style="border: 1px solid black;">
               〒<%= @order.postal_code %></br>
               <%= @order.address %></br>
               <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td style="background-color: rgba(211, 211, 211, 0.5); border: 1px solid black;">支払方法</td>
            <td style="border: 1px solid black;"><%= t("enums.order.payment_method.#{@order.payment_method}") %></td>
          </tr>
          <tr>
            <td style="background-color: rgba(211, 211, 211, 0.5); border: 1px solid black;" >ステータス</td>
            <td style="border: 1px solid black;"><%= t("enums.order.status.#{@order.status}") %></td>
          </tr>
        </table>
      </div>

      <div class="col-4">
        <h5><strong>請求情報</strong></h5>
        <table class="table table-bordered">
          <tr>
            <td style="background-color: rgba(211, 211, 211, 0.5); border: 1px solid black;">商品合計</td>
            <td style="border: 1px solid black;"><%= number_with_delimiter((@order.total_price) - (@order.shipping_fee)) %></td>
          </tr>
          <tr>
            <td style="background-color: rgba(211, 211, 211, 0.5); border: 1px solid black;">配送料</td>
            <td style="border: 1px solid black;"><%= @order.shipping_fee %></td>
          </tr>
          <tr>
            <th style="background-color: rgba(211, 211, 211, 0.5); border: 1px solid black;">ご請求額</th>
            <td style="border: 1px solid black;"><%= number_with_delimiter(@order.total_price) %></td>
          </tr>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <h5><strong>注文内容</strong></h5>
        <table class="table table-bordered">
          <tr>
            <td style="background-color: rgba(211, 211, 211, 0.5); border: 1px solid black;">商品</td>
            <td style="background-color: rgba(211, 211, 211, 0.5); border: 1px solid black;">単価（税込）</td>
            <td style="background-color: rgba(211, 211, 211, 0.5); border: 1px solid black;">個数</td>
            <td style="background-color: rgba(211, 211, 211, 0.5); border: 1px solid black;">小計</td>
          </tr>
          <% @order_details. each do |order_detail| %>
            <tr>
              <td style="border: 1px solid black;"><%= order_detail.item.name %></td>
              <td style="border: 1px solid black;"><%= number_with_delimiter(((order_detail.item.price)*1.1).floor) %></td>
              <td style="border: 1px solid black;"><%= order_detail.amount %></td>
              <td style="border: 1px solid black;"><%= number_with_delimiter((order_detail.amount) *  (((order_detail.item.price)*1.1).floor)) %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>

</div>

