<h3>注文情報入力</h3>
  <%= form_with model: @order, url: orders_confirm_path do |f| %>
    <h4>支払い方法</h4>
      <div>
        <%= f.radio_button :payment_method, "credit_card" %>
        <%= f.label :payment_method_credit_card, "クレジットカード" %>
      </div>
      <div>
        <%= f.radio_button :payment_method, "transfer" %>
        <%= f.label :payment_method_transfer, "銀行振込" %>
      </div>

    <h4>お届け先</h4>
      <div>
        <%= f.radio_button :address, "customer_address" %>
        <%= f.label :address_customer_address, "ご自身の住所" %></br>
          〒<%= @customer.postal_code %><%= @customer.address %></br>
          <%= @customer.last_name %><%= @customer.first_name %>
      </div>

      <div>
        <%= f.radio_button :address, "customer_registration_address" %>
        <%= f.label :address_customer_registration_address, "登録済住所から選択" %></br>
          <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
      </div>

      <div>
        <%= f.radio_button :address, "new_address" %>
        <%= f.label :address_new_address, "新しいお届け先" %>
          <table>
            <tr>
              <th> 郵便番号（ハイフンなし）</th>
              <td><%= f.text_field :postal_code, placeholder:"0000000" %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= f.text_field :address, placeholder:"東京都" %></td>
            </tr>
            <tr>
              <th>宛名</th>
              <td><%= f.text_field :name, placeholder:"令和道子" %></td>
            </tr>
          </table>
      </div>
    <%= f.submit "確認画面へ進む" %>
  <% end %>