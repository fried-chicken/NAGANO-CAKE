<div class="container">
  <div class="row">
    <div class="col"></div>
    <dib class="col">
      <h3><%= @item.name %></h3>
      <p><%= @item.introduction %></p>
      <p>￥<%= @item.price %>（税込）</p>
      <p>個数選択</p>
      <%= form_with(model:@item, url:cart_items_path) do |f| %>
        <%= f.hidden_field :item_id, :value => @item_id %>
        <%= f.select :amount, *[1..10] %>
        <%= f.submit "カートに入れる" %>
      <% end %>
    </dib>
  </div>
</div>