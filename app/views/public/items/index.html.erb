<div class="container">
  <div class="d-flex">
    <h4>商品一覧</h4>
    <h5>（全<%= @items_count.count %>件）</h5>
  </div>
  <div class="row">
    <div class="d-flex flex-wrap justify-content: space-around">
      <% @items.each do |item| %>
        <div class="card">
          <%= link_to item_path(item.id), style: "text-decoration: underline; color: black;" do %>
            <p><%= image_tag item.get_image, size:"250x200" %></p>
            <p><%= item.name %></p>
            <p>￥<%= number_with_delimiter(item.price) %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <%= paginate @items %>
</div>
