<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">配送先編集</h4>
      <%= form_with(model: @address, url:address_path, local: true ,method: :patch) do |f| %>
       <table>
        <tr>
          <th>　　　　<%= f.label :"郵便番号(ハイフンなし)" %>　　　</th>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <th>　　　　<%= f.label :"住所" %>　　　</th>
          <td> <%= f.text_field :address, size: 40 %></td>
        </tr>
          <th>　　　　<%= f.label :"宛名" %>　　　</th>
          <td> <%= f.text_field :name %></td>
          <td>　<%= f.submit '変更内容を保存',class:"btn btn-success"%></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
