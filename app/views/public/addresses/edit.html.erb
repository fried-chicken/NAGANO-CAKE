<div class="container mt-5 mb-4">
  <div class="row">
    <div class="col-md-10 col-md-offset-1 col-md-left">
      <h3>配送先編集</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <%= form_with(model: @address, url:address_path, local: true ,method: :patch) do |f| %>
      <table>
        <tr>
          <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
          <th><%= f.text_field :postal_code %></th>
        </tr>
        <tr>
          <th><%= f.label :"住所" %></th>
          <td> <%= f.text_field :address, size: "50x5" %></td>
        </tr>
        <tr>
          <th><%= f.label :"宛名" %></th>
          <td> <%= f.text_field :name %></td>
          <td><%= f.submit '変更内容を保存', class:"btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
    
 
