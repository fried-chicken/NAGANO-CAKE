<h1>配送先登録/一覧</h1>
  <%= form_with(model: @address, :url => {:controller => "public/addresses"}) do |f| %>

  <table>
    <tr>
      <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th><%= f.label :"住所" %></th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th><%= f.label :"宛名" %></th>
      <td><%= f.text_field :name %></td>
      <td><%= f.submit "新規登録" %></td>
    </tr>
  </table>
  <% end %>
  
   
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛先</th></th>
    </tr>
    
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td> <%= address.name %></td>
        <td><%= link_to "編集する",edit_address_path(address) %></td>
        <td><%= link_to "削除する",address_path(address), method: :delete %></td>
      </tr>
  </tbody>
  <% end %>
  

    
    


