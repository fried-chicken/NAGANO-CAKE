<div class="container mt-5 mb-5">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h3><strong>ショッピングカート</strong></h3>
    </div>
    <div class="col-sm-2 px-sm-0">
      <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, data: {confirm: 'カートを空にしてよろしいですか？'}, class: "btn btn-danger" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 px-sm-0 mx-auto">
      <table class="table table-bordered ">
        <thead>
          <tr>
            <th style="border: 1px solid black;"class="table-active" style="width:35%">商品名</th>
            <th style="border: 1px solid black;"class="table-active" style="width:15%">単価(税込み)</th>
            <th style="border: 1px solid black;"class="table-active" style="width:20%">数量</th>
            <th style="border: 1px solid black;"class="table-active" style="width:10%">小計</th>
            <th style="border: 1px solid black;"class="table-active" style="width:20%"></th>
          </tr>
        </thead>
          <% @sum = 0 %>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td style="border: 1px solid black;"class="align-middle">
                <%= image_tag cart_item.item.image, size: "100x80" %>
                <%= cart_item.item.name %>
              </td>
              <td style="border: 1px solid black;"class="align-middle"><%= number_with_delimiter(cart_item.item.with_taxin_price.floor) %></td>
              <td style="border: 1px solid black;"td class="align-middle">
                <%= form_with model:cart_item, url:cart_item_path(cart_item.id) , local:true do |f| %>
                <%= f.select :amount, *[1..10] %>
                <%= f.submit "変更" , class: "btn btn-success" %>
               <% end %>
              </td>
              <td style="border: 1px solid black;"class="align-middle"><%= number_with_delimiter(cart_item.subtotal.floor) %></td>
              <td style="border: 1px solid black;"class="align-middle text-center"><%= link_to "削除", cart_item_path(cart_item) ,  method: :delete , "data-confirm" => "商品を削除しますか？" , class: "btn btn-danger"%></td>
            </tr>
            <% @sum += cart_item.subtotal %>
          <% end %>
      </table>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-sm-6 px-sm-0 offset-sm-2">
      <%= link_to "買い物を続ける" , root_path , class: "btn btn-primary" %>
    </div>
    <div class="col-sm-4 px-sm-0">
      <table class="table table-bordered">
        <tr>
          <th style="border: 1px solid black;"class="table-active" style="width:50%">合計金額</td><td style="border: 1px solid black;"style="width:50%"><%= number_with_delimiter(@sum.floor) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 px-sm-0 mx-auto text-center mb-3">
      <%= link_to "情報入力に進む" , new_order_path , class: "btn btn-success" %>
    </div>
  </div>
</div>